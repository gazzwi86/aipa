# AIPA Environment Variables
# Copy to .env and fill in your values

# =============================================================================
# AUTHENTICATION
# =============================================================================

# Password hash for web UI login
# Generate with: python3 -c "import bcrypt; print(bcrypt.hashpw(b'YOUR_PASSWORD', bcrypt.gensalt()).decode())"
# Note: Wrap in single quotes to prevent $ interpretation
AUTH_PASSWORD_HASH='$2b$12$YOUR_HASH_HERE'

# Session secret (generate with: openssl rand -hex 32)
SESSION_SECRET=change-me-to-random-string

# =============================================================================
# CLAUDE CODE AUTHENTICATION
# =============================================================================

# Long-lived OAuth token for Claude Code
# Generate with: claude setup-token
# This uses your Claude Pro/Max subscription
CLAUDE_CODE_OAUTH_TOKEN=sk-ant-oat01-xxxxx...

# =============================================================================
# LIVEKIT (Required for voice)
# =============================================================================

# Get these from https://cloud.livekit.io/
LIVEKIT_URL=wss://your-project.livekit.cloud
LIVEKIT_API_KEY=APIxxxxx
LIVEKIT_API_SECRET=your-secret-here

# =============================================================================
# AI API KEYS (Optional - only needed if NOT using local STT/TTS)
# =============================================================================

# OpenAI API Key - Only needed if not using local Whisper/Kokoro
# The full docker-compose.yml uses local services, so this is optional
OPENAI_API_KEY=

# =============================================================================
# MCP SERVER API KEYS (Optional)
# =============================================================================

# Notion Integration Token
# Get from: https://www.notion.so/my-integrations
NOTION_API_KEY=

# GitHub Personal Access Token
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# AWS Profile Name
AWS_PROFILE_NAME=

# Context7 API Token
CONTEXT7_API_TOKEN=

# =============================================================================
# APPLICATION
# =============================================================================

AGENT_NAME=Blu
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Enable /api/chat endpoint for testing (disabled in production by default)
# Set to true when running agent evaluation tests
ENABLE_CHAT_API=false

# Test password for running agent evaluation tests
# Should match the password used to generate AUTH_PASSWORD_HASH
# Only needed when running: pytest tests/evals/test_agent_evals.py --run-agent-evals
# TEST_PASSWORD=your-password
