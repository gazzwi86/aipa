{
  "agent": {
    "name": "Blu",
    "description": "AI Personal Assistant",
    "model": "claude-sonnet-4-5-20250929",
    "mode": "autonomous"
  },
  "paths": {
    "workspace": "/workspace",
    "context": ".claude/context",
    "skills": ".claude/skills",
    "state": ".claude/state"
  },
  "mcp_config": "/workspace/.mcp.json",
  "approval_required": [
    "email.send",
    "calendar.create_event",
    "github.delete_repo",
    "notion.delete_page",
    "bash.rm",
    "bash.sudo",
    "financial.*"
  ],
  "backup": {
    "enabled": true,
    "schedule": "daily",
    "paths": [
      ".claude/context/",
      ".claude/skills/",
      ".claude/agents/",
      ".claude/commands/"
    ]
  }
}
